</head>
<body>
<h1>Calcular Data de Vencimento</h1>

<%= form_tag(calculate_due_date_customers_path, method: :post) do %>
  <div class="field">
    <%= label_tag 'selected_date', 'Selecione uma data:' %>
    <%= date_field_tag 'selected_date', @selected_date %>
  </div>
  <div class="field">
    <%= label_tag 'selected_customer_id', 'Selecione um Customer:' %>
    <%= select_tag 'selected_customer_id', options_for_select(@customer_options, @selected_customer_id) %>
  </div>

  <%= submit_tag 'Ver data de Vencimento' %>
<% end %>

